<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KatratWaterActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status"
        android:layout_width="414dp"
        android:layout_height="115dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_100">


        <TextView
            android:fontFamily="@font/cairo_semibold"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="مياة قطرات"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="164dp"/>


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="379dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/back_svgrepo_com__10_"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="384dp"
        android:layout_height="133dp"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F6F8">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="120dp"
                android:layout_height="121dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/nopath_copy_item"
                android:layout_marginEnd="10dp"/>
            
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@id/item_image"
                app:layout_constraintStart_toStartOf="@id/item_image"
                android:src="@drawable/group_mini"/>
            
            <ImageView
                android:layout_width="130dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@id/item_image"
                app:layout_constraintStart_toStartOf="@id/item_image"
                app:layout_constraintEnd_toEndOf="@id/item_image"
                android:src="@drawable/one"/>

            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:id="@+id/item_text"
                android:layout_width="154dp"
                android:layout_height="29dp"
                app:layout_constraintTop_toTopOf="@id/item_image"
                app:layout_constraintEnd_toStartOf="@id/item_image"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="مياة قطرات من السحب"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:src="@drawable/location_pin_svgrepo_com__37_"
                app:layout_constraintEnd_toStartOf="@id/item_image"
                app:layout_constraintTop_toBottomOf="@id/item_text"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>
            
            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:layout_width="213dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/item_text"
                app:layout_constraintEnd_toStartOf="@id/location_icon"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:textColor="#707070"
                android:text="ينبع البحر-طريق املج-قبل قاعة الملكة"/>
            
            <ImageView
                android:id="@+id/map"
                android:layout_width="73dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/location_icon"
                app:layout_constraintEnd_toStartOf="@id/item_image"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rectangle_28801"/>
            
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="@id/map"
                app:layout_constraintEnd_toEndOf="@id/map"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/path_1166"/>
            
            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:layout_width="34dp"
                android:layout_height="19dp"
                app:layout_constraintTop_toTopOf="@id/map"
                app:layout_constraintStart_toStartOf="@id/map"
                android:text="الخريطة"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginStart="7dp"
                android:textSize="10sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_2"
        android:layout_width="384dp"
        android:layout_height="133dp"
        app:layout_constraintTop_toBottomOf="@id/card_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F6F8">

            <ImageView
                android:id="@+id/item_image_2"
                android:layout_width="120dp"
                android:layout_height="121dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/nopath_copy_item_two"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:layout_constraintBottom_toBottomOf="@id/item_image_2"
                app:layout_constraintStart_toStartOf="@id/item_image_2"
                android:src="@drawable/group_mini"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@id/item_image_2"
                app:layout_constraintStart_toStartOf="@id/item_image_2"
                app:layout_constraintEnd_toEndOf="@id/item_image_2"
                android:src="@drawable/one"/>

            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:id="@+id/item_text_2"
                android:layout_width="154dp"
                android:layout_height="29dp"
                app:layout_constraintTop_toTopOf="@id/item_image_2"
                app:layout_constraintEnd_toStartOf="@id/item_image_2"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="مياة قطرات من أوسكا"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/location_icon_2"
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:src="@drawable/location_pin_svgrepo_com__37_"
                app:layout_constraintEnd_toStartOf="@id/item_image_2"
                app:layout_constraintTop_toBottomOf="@id/item_text_2"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:layout_width="213dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/item_text_2"
                app:layout_constraintEnd_toStartOf="@id/location_icon_2"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:textColor="#707070"
                android:text="ينبع البحر-طريق املج-قبل قاعة الملكة"/>

            <ImageView
                android:id="@+id/map_2"
                android:layout_width="73dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/location_icon_2"
                app:layout_constraintEnd_toStartOf="@id/item_image_2"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rectangle_28801"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="@id/map_2"
                app:layout_constraintEnd_toEndOf="@id/map_2"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/path_1166"/>

            <TextView
                android:fontFamily="@font/cairo_semibold"
                android:layout_width="34dp"
                android:layout_height="19dp"
                app:layout_constraintTop_toTopOf="@id/map_2"
                app:layout_constraintStart_toStartOf="@id/map_2"
                android:text="الخريطة"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginStart="7dp"
                android:textSize="10sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>