<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInvitation"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_bar"
        android:layout_width="414dp"
        android:layout_height="115dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_100">


        <TextView
            android:fontFamily="@font/cairo_semibold"
            android:layout_width="132dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="إضافة دعوات الزواج"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="164dp"/>



        <ImageView
            android:id="@+id/calendar_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="29dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="365dp"
            android:src="@drawable/ic_logo"/>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="379dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/back_svgrepo_com__10_"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/name_et"
        android:layout_width="384dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:hint="الاسم"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <EditText
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/number_et"
        android:layout_width="384dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/name_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="100dp"
        android:drawableStart="@drawable/line"
        android:hint="  00 000 0000"
        android:textColorHint="@color/black"
        android:layout_marginBottom="290dp"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    
    <TextView
        android:layout_width="34dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="@id/number_et"
        app:layout_constraintBottom_toBottomOf="@id/number_et"
        app:layout_constraintStart_toStartOf="@id/number_et"
        app:layout_constraintEnd_toEndOf="@id/number_et"
        android:text="+966"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="230dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    
    <ImageView
        android:layout_width="45dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/number_et"
        app:layout_constraintBottom_toBottomOf="@id/number_et"
        app:layout_constraintStart_toStartOf="@id/number_et"
        app:layout_constraintEnd_toEndOf="@id/number_et"
        android:src="@drawable/flag_saudi_arabia"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="320dp"/>
    
    <EditText
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/title_et"
        android:layout_width="384dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/number_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:hint="ادخل عنوان للدعوه هنا"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    
    <EditText
        android:fontFamily="@font/cairo_semibold"
        android:layout_width="384dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/title_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:hint="حدد التاريخ والوقت"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="date"/>



</androidx.constraintlayout.widget.ConstraintLayout>