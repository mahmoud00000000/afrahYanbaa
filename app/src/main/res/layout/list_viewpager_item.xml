<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="414dp"
        android:layout_height="482dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/no_path_big"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/black_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nopath___copy"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/yellow_image"
            android:layout_width="13dp"
            android:layout_height="10dp"
            android:src="@drawable/inverted_commas"
            android:layout_marginTop="448dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="385dp"
            android:layout_marginEnd="15sp"/>

        <TextView
            android:id="@+id/text_pager"
            android:layout_width="285dp"
            android:layout_height="29dp"
            android:text="دعوة زواج الشاب مشعل محمد حميد الرفاعي"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="440dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="39dp"/>

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/group_icon"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="427dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="360dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>