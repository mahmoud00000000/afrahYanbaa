<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status"
        android:layout_width="414dp"
        android:layout_height="115dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_100">


        <TextView
            android:fontFamily="@font/cairo_semibold"
            android:id="@+id/status_title"
            android:layout_width="158dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="مياة قطرات من السحب"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="164dp"/>



        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="29dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="378dp"
            android:src="@drawable/group_5932"/>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="379dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/back_svgrepo_com__10_"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_view_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:layout_constraintBottom_toBottomOf="@id/item_view_image"
                app:layout_constraintStart_toStartOf="@id/item_view_image"
                android:src="@drawable/group_icon"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/text_item_1"
        android:layout_width="154dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:layout_marginTop="230dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"/>
    
    <ImageView
        android:id="@+id/phone_calling"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/text_item_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/phone_calling_svgrepo_com__4_"/>
    
    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/phone_num"
        android:layout_width="62dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/phone_calling"
        app:layout_constraintBottom_toBottomOf="@id/phone_calling"
        app:layout_constraintEnd_toStartOf="@id/phone_calling"
        android:layout_marginEnd="10dp"
        android:text="رقم الجوال"
        android:textSize="13sp"
        android:textColor="#271160"
        android:gravity="center"/>

    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/number"
        android:layout_width="81dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/phone_num"
        app:layout_constraintBottom_toBottomOf="@id/phone_num"
        app:layout_constraintEnd_toStartOf="@id/phone_num"
        android:layout_marginEnd="10dp"
        android:text="50 166 9807"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/whats"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="@id/number"
        app:layout_constraintBottom_toBottomOf="@id/number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/group_48520"/>

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="@id/number"
        app:layout_constraintBottom_toBottomOf="@id/number"
        app:layout_constraintStart_toEndOf="@id/whats"
        android:layout_marginStart="10dp"
        android:src="@drawable/group_48521"/>
    
    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="13dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/phone_calling"
        app:layout_constraintStart_toStartOf="@id/phone_calling"
        app:layout_constraintEnd_toEndOf="@id/phone_calling"
        android:layout_marginTop="30dp"
        android:src="@drawable/location_pin_svgrepo_com__37_"/>
    
    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/text_ad"
        android:layout_width="40dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/location_icon"
        app:layout_constraintBottom_toBottomOf="@id/location_icon"
        app:layout_constraintEnd_toStartOf="@id/location_icon"
        android:layout_marginEnd="10dp"
        android:textColor="#271160"
        android:textSize="13sp"
        android:text="عنوانك"
        android:gravity="center"/>

    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:id="@+id/add"
        android:layout_width="213dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/text_ad"
        app:layout_constraintBottom_toBottomOf="@id/text_ad"
        app:layout_constraintEnd_toStartOf="@id/text_ad"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="ينبع البحر-طريق املج-قبل قاعة الملكة"
        android:gravity="center"/>
    
    <ImageView
        android:id="@+id/map_btn"
        android:layout_width="146dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintEnd_toEndOf="@id/add"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/rectangle_28804"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="@id/map_btn"
        app:layout_constraintEnd_toEndOf="@id/map_btn"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/path_1166"/>

    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:layout_width="109dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="@id/map_btn"
        app:layout_constraintStart_toStartOf="@id/map_btn"
        android:text="عنوان المحل علي الخريطة"
        android:textColor="@color/white"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"
        android:textSize="10sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/offer_bar"
        android:layout_width="384dp"
        android:layout_height="83dp"
        app:layout_constraintTop_toBottomOf="@id/map_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/rectangle_28821"/>
    
    <ImageView
        android:id="@+id/offer_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/offer_bar"
        app:layout_constraintEnd_toEndOf="@id/offer_bar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/offer_svgrepo_com__20_"/>
    
    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:layout_width="72dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="@id/offer_icon"
        app:layout_constraintBottom_toBottomOf="@id/offer_icon"
        app:layout_constraintEnd_toStartOf="@id/offer_icon"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="التخفيضات"
        android:gravity="center"/>
    
    <TextView
        android:fontFamily="@font/cairo_semibold"
        android:layout_width="234dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/offer_icon"
        app:layout_constraintEnd_toEndOf="@id/offer_icon"
        android:layout_marginTop="20dp"
        android:textColor="#707070"
        android:textSize="13sp"
        android:text="تتوفر لدينا جميع أنواع المياه وبسعر مناسب"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>